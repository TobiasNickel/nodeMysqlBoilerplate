extends base

block vars
    - var title = 'Register';

block body
    h1 Dashboard
    p.
        Welcome to your dashboard
    p= fuckoff
    h2 User Information
    - var user = session.user;
    if user 
        ul
            li name: #{user.name}
            li verified: #{user.verified}
            li e-mail: #{user.mail}
            li registration: #{user.registrationTime}
    else
        p you are not logged in
    - var userString = JSON.stringify(session.user);
    p= userString